{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mulugeta/delete-confirmation": [
        "libs/delete-confirmation/src/index.ts"
      ],
      "@mulugeta/notification": ["libs/notification/src/index.ts"],
      "@mulugeta/pagination": ["libs/pagination/src/index.ts"],
      "@mulugeta/shared-table": ["libs/shared-table/src/index.ts"],
      "@shared-layout": ["libs/shared-layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
